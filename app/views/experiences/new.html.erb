<section class="new-form">
  <header>
    <h3 class="text-center">Add New Experience</h3>

    <%= form_for([@user, @experience]) do |f| %>
      <div class="row">
        <span>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </span>
      </div>

      <div class="row">
        <span>
          <%= f.label :company_name %>
          <%= f.text_field :company_name %>
        </span>
      </div>

      <div class="row">
        <%= f.label :company_city %>
        <%= f.text_field :company_city %>
      </div>

      <div class="row">
        <%= f.label :company_state %>
        <%= f.select :company_state do %>
          <% Experience.us_states.each do |state| %>
            <%= content_tag :option, state.last %>
          <% end %>
        <% end %>
      </div>

      <div class="row">
        <%= f.label :start_date, 'Start date' %>
        <%= f.date_select :start_date,
          order: [:month, :year],
          start_date: '2000',
          end_date: '2015',
          start_year: Date.today.year - 30,
          end_year: Date.today.year
        %>
      </div>

      <div class="row">
        <%= f.label :current %>
        <%= f.check_box :current, checked: true %>
      </div>

      <div class="row">
        <div id="end-date-container" class="hidden">
          <%= f.label :end_date, 'End date' %>
          <%= f.date_select :end_date,
            order: [:month, :year],
            start_date: '2000',
            end_date: '2015',
            start_year: Date.today.year - 30,
            end_year: Date.today.year
          %>
        </div>
      </div>

      <div class="row text-center">
        <%= f.submit "Submit", class: "button" %>
      </div>
    <% end %>
  </header>
</section>
